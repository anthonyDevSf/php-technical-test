{% extends 'base.html.twig' %}

{% set route = 'Create' %}
{% if app.request.attributes.get('_route') == 'app_running_update' %}
    {% set route = 'Update' %}
{% endif %}

{% block title %}{{ route }} a running{% endblock %}

{% block body %}
    <div class="row">
        <h1>{{ route }} a running</h1>
    </div>
    <div class="row">
        {{ form_start(form) }}
        {{ form_row(form.start) }}
        {{ form_row(form.duration) }}
        {{ form_row(form.distance) }}
        {{ form_row(form.comment) }}
        <button class="btn btn-primary">Sauvegarder</button>
        {{ form_end(form) }}
    </div>
{% endblock %}