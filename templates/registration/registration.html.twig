{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default panel-login">
                <div class="panel-heading">
                    <h3 class="panel-title">Welcome to Run App</h3>
                </div>
                <div class="panel-body">
                    {{ form_start(form) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.password) }}
                    <button type="submit" class="btn btn-primary btn-lock">Create my account</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}